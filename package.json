{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "projects/*",
      "setup/*"
    ]
  },
  "dependencies": {
    "eslint": "8.52.0",
    "prettier": "3.0.3",
    "@types/styled-components": "5.1.29",
    "@types/node": "20.8.10",
    "@types/react": "18.2.33",
    "@types/jest": "29.5.7",
    "typescript": "5.2.2"
  },
  "scripts": {
    "lint": "yarn workspaces run lint",
    "web-public": "yarn workspace @seixas/web-public",
    "dev:web-public": "yarn web-public dev",
    "build:web-public": "yarn web-public build",
    "start:web-public": "yarn web-public start",
    "lint:web-public": "yarn web-public lint",
    "design-system": "yarn workspace @seixas/design-system",
    "test:design-system": "yarn design-system test",
    "utils": "yarn workspace @seixas/utils",
    "test:utils": "yarn utils test"
  }
}
